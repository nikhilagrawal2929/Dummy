 httpSecurity.csrf().disable()
                // Secured /ccp/api/team
                .authorizeRequests().antMatchers("/ccp/api/printspool/cancelLetter").authenticated().
                anyRequest().permitAll().
                and().exceptionHandling().authenticationEntryPoint(jwtAuthenticationEntryPoint).
                and().sessionManagement().sessionCreationPolicy(SessionCreationPolicy.STATELESS).and().httpBasic().and()
                .headers()
                .permissionsPolicy().policy("geolocation=(),midi=(),sync-xhr=(),microphone=(0,camera=(),magnetometer=(),gyroscope=(),fullscreen=(self),payment=0)")
                .and()
                .referrerPolicy(ReferrerPolicyHeaderWriter.ReferrerPolicy.STRICT_ORIGIN)
                .and()
                .cacheControl().disable()
                .httpStrictTransportSecurity()
                .includeSubDomains(true)
                .maxAgeInSeconds(31536000)
                .preload(true)
                .and()
                .contentSecurityPolicy("default-src 'self';")
                .and()
                .xssProtection()
                .block(true)
                .and()
                .frameOptions()
                .deny();
